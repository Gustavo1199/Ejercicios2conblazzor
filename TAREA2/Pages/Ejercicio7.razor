@code{ int nota = 0;
            string notaentrada = "";
            int Num1 = 0;
            int Num2 = 0;
            int Num3 = 0;
            string Resultado = "";


            void ejercicioo7()
            {
                try
                {
                    nota = int.Parse(notaentrada);


                    Random num = new Random();
                    Num1 = num.Next(0, 35);
                    Num2 = num.Next(0, 35);
                    Num3 = num.Next(0, 30);


                    while (Num1 + Num2 + Num3 != nota)
                    {
                        Num1 = num.Next(1, 35);
                        Num2 = num.Next(1, 35);
                        Num3 = num.Next(1, 30);
                    }


                    if (nota >= 90 && nota <= 103)
                    {
                        Resultado = "Su calificacion es A";
                    }
                    else if (nota >= 80 && nota < 90)
                    {
                        Resultado = "Su calificacion es B";
                    }
                    else if (nota >= 70 && nota < 80)
                    {
                        Resultado = "Su calificacion es C";
                    }
                    else if (nota < 70)
                    {
                        Resultado = "Reprobado";
                    }


                }
                catch
                {

                }
            } }