@page "/Ejercicio2"
@using Blazorise



<h3>Ejercicio2</h3>

<div class="card">
    <div class="card card-columns">
        <div class="card-header">
            <div class="body">
                <button @onclick="obtenerDatos" class="btn btn-success"> Cargar </button>
            </div>
            <div class="card-footer">
                <p>@nombre </p>
            </div>
        </div>
    </div>
</div>



<!-- Button trigger modal -->
<button type="button" @onclick="obtenerDatos" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
    Launch demo modal
</button>


<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                ...
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>





@code {

    consumir Conapi = new consumir();
    string nombre = "", apellido = "";
    string imagen = "", password = "", phone = "", email = "", Direccion = "";

    List<Result> datos = new List<Result>();
    public void obtenerDatos()
    {
        datos = Conapi.traerDato();
        foreach (var people in datos)
        {
            nombre = people.name.first;
        }
    }


}
